<p>商品検索</p>
<%= flash["notice"] %>
<div>
  <%= form_with url: search_path, method: :get do |f| %>
    <%= f.text_field :keyword , class: 'form-control' %>
    <%= f.submit '検索' %>
  <%- end %>
</div>


<% @items.each do |item| %>
  <% if item["mediumImageUrls"].first.empty? %>
    <p>No image</p>
  <% else %>
    <p><%= image_tag item["mediumImageUrls"].first, size: "128x128" %></p>
  <% end %>
  <p><%= item["itemName"] %></p>
  <p><%= item["catchcopy"] %></p>
  <p><%= item["itemPrice"] %></p>
<% end %>